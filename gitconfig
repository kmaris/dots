### Put local configurations for user.{name,email,signingkey}, excludesfile,
### and credentials.helper into ~/.gitconfig.local
[color]
  ui = true
[alias]
  co = checkout
  st = status
  ci = commit
  ca = commit -a
  cam = commit -a -m
  lol = log --notes --graph --oneline
  remotes = remote -v show
  last = log -1 HEAD -p
  branches = branch -a
  supdate = submodule update --remote --merge
  spush = push --recurse-submodules=on-demand
  sdiff = !git diff && git submodule foreach 'git diff'
  type = cat-file -t
  dump = cat-file -p
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
[push]
  default = simple
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process
[include]
  path = ~/.gitconfig.local
[stash]
  showPatch = true
  showIncludeUntracked = true
[core]
  excludesfile = ~/.gitglobalignore
  pager = less -+F -+X
[pager]
  log = diffr | less -+F -+X
  show = diffr | less -+F -+X
  diff = diffr | less -+F -+X
  #log = /usr/share/git-core/contrib/diff-highlight | less -+F -+X
  #show = /usr/share/git-core/contrib/diff-highlight | less -+F -+X
  #diff = /usr/share/git-core/contrib/diff-highlight | less -+F -+X
[gpg]
  program = gpg2
[diff "sopsdiffer"]
  textconv = sops -d
[color "diff"]
  meta = cyan
  frag = magenta bold
  commit = cyan bold
  old = red bold
  new = green bold
  whitespace = red reverse
[init]
	defaultBranch = main
